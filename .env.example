# --- DATABASE CONFIGURATION ---
# Option 1: Supabase (Recommended for local development)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

# Option 2: Local PostgreSQL (Recommended for Docker/Production)
# If DATABASE_URL is set, the app can use it as a fallback or primary storage.
DATABASE_URL="postgresql://postgres:postgres@db:5432/checkhost?schema=public"
POSTGRES_DB="checkhost"
POSTGRES_USER="postgres"
POSTGRES_PASSWORD="postgres"
# ------------------------------

# Authentication
NEXTAUTH_SECRET="your-secret-key-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Admin Emails (comma separated for Google login)
ADMIN_EMAILS="admin@example.com,user2@example.com"

# Traditional Admin Credentials (email/password)
ADMIN_EMAIL="admin@checkhost.local"
ADMIN_PASSWORD="admin123"

# Google AdSense
NEXT_PUBLIC_ADSENSE_CLIENT="ca-pub-XXXXXXXXXXXXXXXX"

# CheckHost API (optional: if you need proxy)
CHECKHOST_API_URL="https://check-host.net"
